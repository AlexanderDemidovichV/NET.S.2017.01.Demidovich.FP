@using System.Collections
@model SelectList
@{
    ViewBag.Title = "ReportTemplate";
}

@section Body{
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <h2>Report</h2>
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">

                    <hr/>
                    <div class="form-group">
                        @Html.DropDownList("skill", Model)
                        @Html.DropDownList("level", new SelectList(new[] {"Novice", "Intermediate", "Advanced"}))
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Print" class="btn btn-primary btn-block" />
                    </div>
                </div>
            }
        </div>
    </div>
    
}


